{
  "private": true,
  "main": "./dist/main.js",
  "scripts": {
    "build": "run-s build:*",
    "build:remix": "NODE_ENV=production remix build",
    "build:worker": "esbuild ./src/main.ts --minify --bundle --outfile=./dist/main.js",
    "dev": "run-p dev:*",
    "dev:remix": "remix watch",
    "dev:worker": "miniflare --watch",
    "fmt": "prettier --write .",
    "postinstall": "remix setup cloudflare-workers",
    "lint": "prettier --check ."
  },
  "prettier": {
    "semi": false
  },
  "dependencies": {
    "@remix-run/cloudflare-workers": "1.1.1",
    "@remix-run/react": "1.1.1",
    "dayjs": "1.10.7",
    "framer-motion": "4.1.17",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hook-form": "7.24.2",
    "react-modal-sheet": "1.4.2",
    "remix": "1.1.1",
    "tiny-invariant": "1.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "2.2.2",
    "@remix-run/dev": "1.1.1",
    "@types/react": "17.0.38",
    "@types/react-dom": "17.0.11",
    "esbuild": "0.14.11",
    "miniflare": "2.2.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.5.1",
    "prettier-plugin-packagejson": "2.2.15",
    "typescript": "4.5.4"
  }
}
